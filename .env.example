# WordPress backend (oxirida / bo'lmasin)
NEXT_PUBLIC_WORDPRESS_URL=https://your-wordpress-site.com

# WordPress Settings → Headless Faust plugin'dan olingan secret key
FAUST_SECRET_KEY=your-faust-secret-key

# Frontend sayt manzili (Hostinger'dagi domen, oxirida / bo'lmasin)
NEXT_PUBLIC_URL=https://infoedu.uz

# Til yo'nalishi: ltr yoki rtl
NEXT_PUBLIC_SITE_DIRECTION=ltr

# Gear sozlama tugmasi: true yoki false
NEXT_PUBLIC_SITE_GEAR_ICON=false

# API chaqiriq metodi: GET yoki POST
NEXT_PUBLIC_SITE_API_METHOD=GET

# Google Analytics o'lchov ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Rasm remote hostname'lar (Next.js Image uchun)
NEXT_PUBLIC_IMAGE_REMOTE_HOSTNAME_1=infoedu.uz
NEXT_PUBLIC_IMAGE_REMOTE_HOSTNAME_2=i0.wp.com

# Build vaqtida WordPress/GraphQL so'rovlariga qo'shiladigan maxfiy header (Cloudflare whitelist uchun)
# Faqat build serverida kerak; production runtime'da ixtiyoriy
BUILD_SECRET=your-build-secret-value

# NextAuth (login uchun — WordPress JWT plugin bilan)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars
# Ixtiyoriy: WordPress login endpoint (default: /wp-json/jwt-auth/v1/token)
# WP_LOGIN_ENDPOINT=/wp-json/jwt-auth/v1/token

# Telegram Login Widget (BotFather da bot yarating, /setdomain bilan domen bog'lang)
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=YourBot
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
